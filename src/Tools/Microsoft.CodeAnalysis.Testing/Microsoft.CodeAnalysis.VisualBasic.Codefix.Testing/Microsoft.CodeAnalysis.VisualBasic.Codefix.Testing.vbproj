<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.1;net452</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <LangVersion>15.5</LangVersion>
    <AssemblyName>Microsoft.CodeAnalysis.VisualBasic.Codefix.Testing</AssemblyName>
    <RootNamespace>Microsoft.CodeAnalysis.VisualBasic.Testing</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard1.1'">
    <PackageTargetFallback>portable-net45+win8</PackageTargetFallback>
  </PropertyGroup>

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <Description>Roslyn Codefix Test Framwork For Visual Basic.</Description>
    <PackageReleaseNotes>Roslyn Codefix Test Framwork For Visual Basic.</PackageReleaseNotes>
    <PackageTags>Roslyn Codefix Test Framwork Visual Basic</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="2.6.1" />
    <PackageReference Include="Microsoft.CodeAnalysis.VisualBasic.Workspaces" Version="1.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.CodeAnalysis.Codefix.Testing\Microsoft.CodeAnalysis.Codefix.Testing.csproj" />
  </ItemGroup>
  
</Project>
